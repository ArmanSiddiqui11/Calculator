<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/solution_tv"
        android:textSize="32dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@+id/result_tv"
        android:layout_margin="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/result_tv"
        android:textSize="64dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@+id/buttons_layout"
        android:layout_margin="16dp"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_alignParentBottom="true"
       android:background="#DDD9D9"
       android:paddingVertical="16dp"
       android:id="@+id/buttons_layout">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="horizontal">
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.FloatingActionButton"
               android:textColor="@color/white"
               android:text="C"
               android:textSize="32dp"
               android:backgroundTint="#f44336"
               android:layout_margin="12dp"
               android:id="@+id/button_c"/>
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.FloatingActionButton"
               android:textColor="@color/white"
               android:text="("
               android:backgroundTint="#a1a1a1"
               android:textSize="32dp"
               android:layout_margin="12dp"
               android:id="@+id/button_open_bracket"/>
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.FloatingActionButton"
               android:textColor="@color/white"
               android:text=")"
               android:backgroundTint="#a1a1a1"
               android:textSize="32dp"
               android:layout_margin="12dp"
               android:id="@+id/button_close_bracket"/>
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.FloatingActionButton"
               android:textColor="@color/white"
               android:text="/"
               android:textSize="32dp"
               android:layout_margin="12dp"
               android:backgroundTint="#ff9800"
               android:id="@+id/button_divide"/>


       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="horizontal">
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.FloatingActionButton"
               android:textColor="@color/white"
               android:text="7"
               android:backgroundTint="#32BFB2"
               android:textSize="32dp"
               android:layout_margin="12dp"
               android:id="@+id/button_7"/>
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.FloatingActionButton"
               android:textColor="@color/white"
               android:text="8"
               android:backgroundTint="#32BFB2"
               android:textSize="32dp"
               android:layout_margin="12dp"
               android:id="@+id/button_8"/>
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.FloatingActionButton"
               android:textColor="@color/white"
               android:text="9"
               android:backgroundTint="#32BFB2"
               android:textSize="32dp"
               android:layout_margin="12dp"
               android:id="@+id/button_9"/>
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.FloatingActionButton"
               android:textColor="@color/white"
               android:text="*"
               android:textSize="32dp"
               android:layout_margin="12dp"
               android:backgroundTint="#ff9800"
               android:id="@+id/button_multiply"/>


       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="horizontal">
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.FloatingActionButton"
               android:textColor="@color/white"
               android:text="4"
               android:backgroundTint="#32BFB2"
               android:textSize="32dp"
               android:layout_margin="12dp"
               android:id="@+id/button_4"/>
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.FloatingActionButton"
               android:textColor="@color/white"
               android:text="5"
               android:backgroundTint="#32BFB2"
               android:textSize="32dp"
               android:layout_margin="12dp"
               android:id="@+id/button_5"/>
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.FloatingActionButton"
               android:textColor="@color/white"
               android:text="6"
               android:backgroundTint="#32BFB2"
               android:textSize="32dp"
               android:layout_margin="12dp"
               android:id="@+id/button_6"/>
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.FloatingActionButton"
               android:textColor="@color/white"
               android:text="+"
               android:textSize="32dp"
               android:layout_margin="12dp"
               android:backgroundTint="#ff9800"
               android:id="@+id/button_add"/>


       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="horizontal">
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.FloatingActionButton"
               android:textColor="@color/white"
               android:text="1"
               android:backgroundTint="#32BFB2"
               android:textSize="32dp"
               android:layout_margin="12dp"
               android:id="@+id/button_1"/>
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               android:backgroundTint="#32BFB2"
               style="@style/Widget.MaterialComponents.FloatingActionButton"
               android:textColor="@color/white"
               android:text="2"
               android:textSize="32dp"
               android:layout_margin="12dp"
               android:id="@+id/button_2"/>
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.FloatingActionButton"
               android:textColor="@color/white"
               android:text="3"
               android:backgroundTint="#32BFB2"
               android:textSize="32dp"
               android:layout_margin="12dp"
               android:id="@+id/button_3"/>
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.FloatingActionButton"
               android:textColor="@color/white"
               android:text="-"
               android:textSize="32dp"
               android:layout_margin="12dp"
               android:backgroundTint="#ff9800"
               android:id="@+id/button_subtract"/>


       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="horizontal">
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.FloatingActionButton"
               android:textColor="@color/white"
               android:text="AC"
               android:textSize="18dp"
               android:backgroundTint="#f44336"
               android:layout_margin="12dp"
               android:id="@+id/button_ac"/>
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.FloatingActionButton"
               android:textColor="@color/white"
               android:text="0"
               android:backgroundTint="#32BFB2"
               android:textSize="32dp"
               android:layout_margin="12dp"
               android:id="@+id/button_0"/>
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.FloatingActionButton"
               android:textColor="@color/white"
               android:text="."
               android:backgroundTint="#32BFB2"
               android:textSize="32dp"
               android:layout_margin="12dp"
               android:id="@+id/button_dot"/>
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.FloatingActionButton"
               android:textColor="@color/white"
               android:text="="
               android:textSize="32dp"
               android:layout_margin="12dp"
               android:backgroundTint="#ff9800"
               android:id="@+id/button_equal"/>


       </LinearLayout>


   </LinearLayout>


</RelativeLayout>